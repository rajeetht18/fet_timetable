<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!--Timing Tree View Inherit-->
    <record id="view_op_timing_tree_inherit" model="ir.ui.view">
      <field name="name">op.timing.tree.inherit</field>
      <field name="model">op.timing</field>
      <field name="inherit_id" ref="openeducat_timetable.view_op_timing_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree/field[@name='am_pm']" position="after">
          <field name="is_break"/>
        </xpath>
      </field>
    </record>

    <!--Timing Form View Inherit-->
    <record id="view_op_timing_form" model="ir.ui.view">
      <field name="name">op.timing.form.inherit</field>
      <field name="model">op.timing</field>
      <field name="inherit_id" ref="openeducat_timetable.view_op_timing_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form/sheet/group/field[@name='am_pm']" position="after">
          <field name="is_break"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
