<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Faculty Form Inherit -->
        <record id="view_op_faculty_inherit" model="ir.ui.view">
            <field name="name">op.subject.form.inherit</field>
            <field name="model">op.faculty</field>
            <field name="inherit_id" ref="openeducat_core.view_op_faculty_form" />
            <field name="priority" eval="9" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='subjects']" position="after">
                    <page name="class" string="Classes">
                        <field name="class_details" colspan="4" nolabel="1">
                            <tree string="class deatils">
                                <field name="subject_id"/>
                                <field name="batch_id"/>
                                <field name="activity_tag"/>
                                <field name="weight_percent"/>
                                <field name="duration"/>
                            </tree>
                        </field>
                    </page>

                    <page name="time_constraints" string="Time Constraints">
                      <separator string="Time Constraints"/>
                      <group>
                        <field name="max_days"/>
                        <field name="min_days"/>
                        <field name="max_gaps"/>
                        <field name="max_gaps_week"/>
                        <field name="weight_percent"/>
                        <field name="max_hrs"/>
                        <field name="max_hrs_act"/>
                        <field name="min_hrs"/>
                        <field name="max_hrs_cont"/>
                        <field name="interval_start"/>
                        <field name="interval_end"/>
                        <div>
                          <span>
                            (*) Constraint For Adding Teachers Time (*)
                          </span>
                        </div>
                      </group>
                      <group>
                        <field name="max_hr_cont_act"/>
                        <field name="activity_name"/>
                        <div>
                          <span>
                            (*) Constraint For Adding Teachers Activity (*)
                          </span>
                        </div>
                      </group>
                    </page>
                    <page name="space_constraints" string="Space Constraints">
                      <separator string="Space Constraints"/>
                      <group>
                      <field name="max_building"/>
                      <field name="max_build_week"/>
                      <field name="min_gap_build"/>
                      <field name="room"/>
                      <field name="room_weight"/>
                      <field name="set_of_room" widget="many2many_tags"/>
                      <field name="set_of_room_weight"/>
                      <div>
                        <span>
                          (*) This constraint is related to the room available for faculty
                        </span>
                      </div>
                      </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_op_faculty_class_list_form" model="ir.ui.view">
            <field name="name">op.faculty.class.list.form</field>
            <field name="model">op.faculty.class.list</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string= "Faculty Class">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="subject_id"/>
                            <field name="batch_id"/>
                            <field name="split"/>
                            <field name="weight_percent"/>
                            <field name="duration"/>
                            <field name="activity_tag" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_faculty_class_list_view">
            <field name="name">Faculty Class list</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.faculty.class.list</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
