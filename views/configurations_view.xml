<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
      <!--Buildings tree view-->
        <record id="buildings_tree_view" model="ir.ui.view">
            <field name="name">op.buildings.tree</field>
            <field name="model">op.buildings</field>
            <field name="arch" type="xml">
                <tree string="Buildings Tree" widget="one2many_list">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <!--Buildings form view-->
        <record id="buildings_form_view" model="ir.ui.view">
            <field name="name">op.buildings.form</field>
            <field name="model">op.buildings</field>
            <field name="arch" type="xml">
                <form string="Building Form">
                    <sheet>
                        <group>
                          <group>
                            <field name="name"/>
                          </group>
                          <group>
                            <field name="code"/>
                          </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!--Buildings Search View-->
        <record id="buildings_search_view" model="ir.ui.view">
            <field name="name">op.buildings.search</field>
            <field name="model">op.buildings</field>
            <field name="arch" type="xml">
                <search string="Buildings">
                    <field name="name" />
                </search>
            </field>
        </record>

        <!--Buildings Action-->
        <record model="ir.actions.act_window" id="action_buildings">
            <field name="name">Buildings</field>
            <field name="res_model">op.buildings</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="buildings_tree_view" />
            <field name="search_view_id" ref="buildings_search_view" />
        </record>

        <!--Buildings Menu-->
        <menuitem id="menu_buildings" name="Buildings"  parent="openeducat_classroom.menu_op_school_config_class_room"
        action="action_buildings" sequence="2" />

        <!--ClassRoom Form View Inherit-->
        <record id="view_op_classroom_form_inherit" model="ir.ui.view">
            <field name="name">op.classroom.form.inherit</field>
            <field name="model">op.classroom</field>
            <field name="inherit_id" ref="openeducat_classroom.view_op_classroom_form"/>
            <field name="arch" type="xml">
              <xpath expr="//form/sheet/group/field[@name='capacity']" position="before">
                <field name="building"/>
              </xpath>
            </field>
          </record>

        <!--ClassRoom Form View Inherit-->
        <record id="view_op_classroom_tree_inheritt" model="ir.ui.view">
            <field name="name">op.classroom.tree.inherit</field>
            <field name="model">op.classroom</field>
            <field name="inherit_id" ref="openeducat_classroom.view_op_classroom_tree"/>
            <field name="arch" type="xml">
              <xpath expr="//tree/field[@name='capacity']" position="before">
                <field name="building"/>
              </xpath>
            </field>
          </record>

          <!--Activity Tag Tree view-->
            <record id="activity_tag_tree_view" model="ir.ui.view">
                <field name="name">op.activity.tags.tree</field>
                <field name="model">op.activity.tags</field>
                <field name="arch" type="xml">
                    <tree string="Activity Tag Tree">
                        <field name="name"/>
                        <field name="description"/>
                    </tree>
                </field>
            </record>

            <!--Actrivity Tag form view-->
            <record id="activity_tag_form_view" model="ir.ui.view">
                <field name="name">op.activity.tags.form</field>
                <field name="model">op.activity.tags</field>
                <field name="arch" type="xml">
                    <form string="Activity Tag Form">
                        <sheet>
                            <group>
                              <group>
                                <field name="name" />
                              </group>
                              <group>
                                <field name="description" />
                              </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <!--Activity Tag Action-->
            <record model="ir.actions.act_window" id="action_activitytags">
                <field name="name">Activity Tag</field>
                <field name="res_model">op.activity.tags</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="activity_tag_tree_view" />
            </record>

            <!--Buildings Menu-->
            <menuitem id="menu_activity_tags" name="Activity Tags"  parent="openeducat_core.menu_op_school_config_activity"
            action="action_activitytags" sequence="2" />

            <!--Subject Form View Inherit-->
            <record id="view_op_subject_form_inherit" model="ir.ui.view">
                <field name="name">op.subject.form.inherit</field>
                <field name="model">op.subject</field>
                <field name="inherit_id" ref="openeducat_core.view_op_subject_form"/>
                <field name="arch" type="xml">
                  <xpath expr="//form/sheet/group/field[@name='type']" position="after">
                    <field name="tag_id"/>
                  </xpath>
                </field>
              </record>

              <!--Subject Tree View Inherit-->
              <record id="view_op_subject_tree_inherit" model="ir.ui.view">
                  <field name="name">op.subject.tree.inherit</field>
                  <field name="model">op.subject</field>
                  <field name="inherit_id" ref="openeducat_core.view_op_subject_tree"/>
                  <field name="arch" type="xml">
                    <xpath expr="//tree/field[@name='type']" position="after">
                      <field name="tag_id"/>
                    </xpath>
                  </field>
              </record>

    </data>
</odoo>
